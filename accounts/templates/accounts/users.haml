- extends 'base.haml'
- load i18n

- block breadcrumbs
    %ul.breadcrumb
        %li
            - include 'home_link.haml'
        %li
            %a{'href': '{% url users %}'}
                {% trans "Users" %}

- block content
    %table.table
        %thead
            %tr
                %th
                    {% trans "User" %}
        %tbody
            - if users
                - for user in users
                    %tr
                        %td
                            %a{'href': '{{ user.get_absolute_url }}'}
                                = user
            - else
                %tr
                    %th
                        {% trans "no users available" %}