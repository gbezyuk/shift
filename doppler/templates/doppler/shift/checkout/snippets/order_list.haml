- load i18n
%table.table
    %thead
        %tr
            %th
                {% trans "#" %}
            %th
                {% trans "Order" %}
            %th
                {% trans "Total" %}
            %th
                {% trans "Status" %}
            %th
                {% trans "Created" %}
            %th
                {% trans "Modified" %}

    %tbody
        - if orders
            - for order in orders
                %tr
                    %th
                        %a{'href': '{{ order.get_absolute_url }}'}
                            = order.id
                    %th
                        %a{'href': '{{ order.get_absolute_url }}'}
                            = order
                    %th
                        = order.total_price
                    %th
                        = order.status
                    %th
                        = order.created
                    %th
                        = order.modified
        - else
            %tr
                %th{'colspan': '6'}
                    {% trans "You haven't ordered anything yet" %}