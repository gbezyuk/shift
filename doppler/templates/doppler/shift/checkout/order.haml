- extends 'doppler/shift/checkout/base.haml'
- load i18n
- load repeatblock
- enablemacros

- block inner_breadcrumbs
    - include 'doppler/shift/checkout/snippets/breadcrumbs/orders.haml'
    %li
        %a{'href': '{% url doppler_shift_order order.id %}'}
            = order

- block doppler_content
    - if not order.is_paid
       - include 'doppler/shift/checkout/pay_with_robokassa.html'
    - else
        {% trans "Order is already paid" %}
    - include 'doppler/shift/checkout/snippets/order_details.haml'
