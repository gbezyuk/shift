- extends 'doppler/shift/checkout/base.haml'
- load i18n
- load repeatblock
- enablemacros

- block inner_breadcrumbs
    -#- include 'doppler/shift/catalog/snippets/breadcrumbs/catalog.haml'

- block doppler_content
    %form{'method': 'POST'}
        - csrf_token
        - block form_actions
            %fieldset
                .form-actions
                    %a.btn{'href': '{% url doppler_shift_clear_cart %}'}
                        {% trans "Clear cart" %}
                    %button.btn{'href': '{% url doppler_shift_cart %}'}
                        {% trans "Update quantity" %}
                    %a.btn.btn-primary{'href': '{% url doppler_shift_cart %}'}
                        {% trans "Make order" %}
        - with cart_mode=1
            - include 'doppler/shift/checkout/snippets/cart_table.haml'
        - repeat form_actions